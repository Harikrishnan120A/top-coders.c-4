# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/identity_service?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_KEY_PREFIX="identity:"

# Kafka Configuration
KAFKA_BROKERS="localhost:9092"
KAFKA_CLIENT_ID="identity-service"
KAFKA_GROUP_ID="identity-service-group"
KAFKA_TOPIC="identity-events"

# Auth0 Configuration (Optional)
AUTH0_DOMAIN=""
AUTH0_CLIENT_ID=""
AUTH0_CLIENT_SECRET=""
AUTH0_AUDIENCE=""

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_LOGIN_MAX=5

# Pagination
DEFAULT_PAGE_LIMIT=20
MAX_PAGE_LIMIT=100

# Logging
LOG_LEVEL="info"
LOG_FORMAT="combined"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this-in-production"

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif"

# External URLs
DEFAULT_REDIRECT_URL="https://www.topcoder.com"
API_BASE_URL="http://localhost:3000/api/v1"

# Feature Flags
ENABLE_SWAGGER="true"
ENABLE_METRICS="false"
ENABLE_CACHING="true"
ENABLE_KAFKA="false"
